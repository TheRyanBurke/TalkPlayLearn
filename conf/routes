# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

# Begin quest
GET		/application/beginquest/{userid}/{questid}/?	Application.beginQuest
GET		/application/uptickobjectivecompletioncount/{engagedQuestId}/{objectiveIndex}/?		Application.uptickObjectiveCompletionCount
GET		/application/downtickobjectivecompletioncount/{engagedQuestId}/{objectiveIndex}/?		Application.downtickObjectiveCompletionCount

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
